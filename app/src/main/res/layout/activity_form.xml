<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity">

    <TextView
        android:layout_weight="1"
        android:text="Cor"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_weight="1"
        android:paddingHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/formEt"
            android:layout_weight="1"
            android:hint="Nome da cor"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:backgroundTint="#FFFFFF"
        android:paddingHorizontal="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:text="Vermelho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/formSbRed"
                android:min="0"
                android:max="255"
                android:layout_marginVertical="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:text="Verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/formSbGreen"
                android:min="0"
                android:max="255"
                android:layout_marginVertical="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:text="Azul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/formSbBlue"
                android:min="0"
                android:max="255"
                android:layout_marginVertical="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/formRGBButton"
            android:gravity="center"
            android:text="#000000"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"
            android:layout_width="match_parent"
            android:layout_height="110dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/formSaveButton"
            android:backgroundTint="@color/teal_700"
            android:text="Salvar"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/formCancelButton"
            android:backgroundTint="@color/red"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>